<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <image class="img-responsive" src="<%=campground.image%>"></image>
                <div class="caption-full">
                    <h4 class="pull-right">$9/night</h4>
                    <h4><a><%=campgroud.name%></a></h4>
                    <p><%=campgroud.description%></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrouds/<%=campgroud._id%>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% campgroud.comments.forEach(function(comments)) {  %>
                    <div class="row">
                        <div class="col-md-12">
                            <%= comment.author.username %>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<p><%= campgroud.description %></p>

<p>
    <a class="btn btn-success" href="/campgrouds/<%=campgroud._id%>/comments/new">Add New Comment</a>
</p>

<% include ../partials/footer %>